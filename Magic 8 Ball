let userName = ""
userName ? console.log(`Hello, ${userName}!`):console.log('Hello!');
let userQuestion = "Will I become a billionare?";
console.log(`${userName}has asked - ${userQuestion}`);
let randomNumber = Math.floor(Math.random() * 8);
console.log(randomNumber)
let eightBall = '';

switch(randomNumber){
  case 0:
  eightBall = 'Your zeros will keep on increasing!';
  break;
  case 1:
  eightBall = 'It is certain';
  break;
  case 2:
  eightBall = 'It is decidely so';
  break;
  case 3:
  eightBall = 'Please try once again';
  break;
  case 4:
  eightBall = 'Cannot predict now';
  break;
  case 5:
  eightBall = 'You can be millionare';
  break;
  case 6:
  eightBall = 'Maybe you will be selfish';
  break;
  case 7:
  eightBall = 'Yea, maybe in coming two years!'
  break;
}

console.log(`The Magic 8 Ball says, ${eightBall}.`);
